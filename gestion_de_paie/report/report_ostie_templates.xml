<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_ostie">
        <t t-call="report.html_container">
            <!-- Debut du rapport -->
            <div class="page">
                <style>
                    .cadre1 {
                    font-size: x-large;
                    border:1px solid black;
                    padding: 1% 1% 1% 1%;
                    width: 250px;
                    text-align:center;
                    }
                    .cadre2 {
                    font-size: small;
                    border:1px solid black;
                    padding: 1% 1% 1% 1%;
                    width: 400px;
                    text-align:left;
                    }
                    .periode {
                    text-align:center;
                    font-size: xx-small;
                    }
                    td,th {padding-top:1%;padding-bottom:1%;padding-right:1%;padding-left:1%;border:1px solid;}
                    table {margin-left:1%;margin-right:1%;border:1px solid;align:center;font-family: Arial, "Arial Black",Arial, Verdana, sans-serif;}
                    th {text-align:center;font-weight:bold;}
                    .tableau{width: 98%;}
                </style>

                <!-- is this usefull -->
                <div class="oe_structure"/>
                <!-- -->
                <div class="row">
                    <div>
                        <div class="col-xs-6">
                            <h2 class="cadre1">OSTIE</h2>
                        </div>
                    </div>

                    <table width="98%" border="1">
                        <thead>
                            <tr>
                                <th>Matricule</th>
                                <th>Nom</th>
                                <th>CIN</th>
                                <th>Sal. Base</th>
                                <th>Prime</th>
                                <th>Heure suppl</th>
                                <th>Retenus</th>
                                <th>Sal. Brut</th>
                                <th>Brut plafonné</th>
                                <th>OSTIE Travailleur 1%</th>
                                <th>OSTIE Employeur 5%</th>
                                <th>Total Ostie</th>
                                <th>N° CNAPS</th>
                                <th>Allocation F.</th>
                                <th>Nbre de charge</th>
                                <th>CNAPS Travailleur 1%</th>
                                <th>CNAPS Employeur 13%</th>
                                <th>TOTAL CNAPS</th>
                                <th>IRSA</th>
                                <th>Sal. Net</th>
                                <th>CHARGE Employeur</th>
                                <th>Période</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr align="center" t-foreach="docs" t-as="line">
                                <td>
                                    <span t-esc="get_annee_mois(line.date_from)"/>
                                </td>
                                <td>
                                    <span t-field="line.name_related"/>
                                </td>
                                <td>
                                    <span t-field="line.payslip_id.employee_id.num_cnaps_emp"/>
                                </td>
                                <td>
                                    <span t-field="line.num_emp"/>
                                </td>
                                <td>
                                    <span t-field="line.date_from"/>
                                </td>
                                <td>
                                    <span t-field="line.date_to"/>
                                </td>
                                <td>
                                    <span t-field="line.net"/>
                                </td>
                                <td>
                                    <span t-field="line.avantage"/>
                                </td>
                                <td>
                                    <span t-field="line.temps_presence"/>
                                </td>
                                <td>
                                    <span t-field="line.brut"/>
                                </td>
                                <td>
                                    <span t-field="line.payslip_id.employee_id.company_id.plafond_cnaps"/>
                                </td>
                                <td>
                                    <span t-field="line.omsiemp"/>
                                </td>
                                <td>
                                    <span t-field="line.omsi"/>
                                </td>
                                <td>
                                    <span t-esc="line.omsi + line.omsiemp"/>
                                </td>
                                <td>
                                    <span t-esc="get_passport_or_cin(line)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </t>
    </template>
</odoo>
